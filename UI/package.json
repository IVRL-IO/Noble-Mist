{
  "name": "noble-mist",
  "author": "IVRL Inc. | Robert M. Meffe",
  "version": "0.0.1",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "npm build:for:electron && npm electron:builder"
  },
  "dependencies": {
    "@walletconnect/web3-provider": "^1.7.5",
    "@web3auth/web3auth": "^0.6.2",
    "ethers": "^5.6.1",
    "moralis": "github:IVRL-IO/Moralis-JS-SDK#dev",
    "vue": "^3.0.5"
  },
  "os": [
    "darwin",
    "linux",
    "windows"
  ],
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-typescript": "^9.1.0",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vue-tsc": "^0.2.2",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.noble-mist.launcher",
    "productName": "Noble-Mist",
    "copyright": "Copyright Â© 2022 IVRL Inc. | Released under MIT",
    "mac": {
      "category": "public.app-category.games"
    },
    "linux": {
      "category": "Game",
      "mimeType": [
        "x-scheme-handler/noble-mist"
      ],
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
